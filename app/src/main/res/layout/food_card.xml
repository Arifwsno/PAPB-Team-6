<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="meal"
            type="com.example.projectfoodpedia.datamakanan.model.MealModel" />
        <variable
            name="listener"
            type="com.example.projectfoodpedia.utils.CustomOnClick" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="156dp"
            android:layout_height="222dp"
            android:background="#ffffff"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:tag="@{meal.name}"
                android:onClick="@{listener::onClicked}"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_foodImage"
                    android:imageUrl="@{meal.picture}"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_foodTitle"
                    android:text="@{meal.name}"
                    app:layout_constraintTop_toBottomOf="@id/iv_foodImage"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="134dp"
                    android:layout_height="20dp" />
                <!--android:text=""-->

                <TextView
                    android:id="@+id/tv_placeLocation"
                    app:layout_constraintTop_toBottomOf="@id/tv_foodTitle"
                    android:layout_marginTop="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="134dp"
                    android:layout_height="16dp" />
                <!--android:text=""-->

                <ImageView
                    android:id="@+id/iv_ratingStar"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_placeLocation"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="11dp" />

                <TextView
                    android:id="@+id/tv_ratingText"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="@id/iv_ratingStar"
                    app:layout_constraintBottom_toBottomOf="@id/iv_ratingStar"
                    app:layout_constraintStart_toEndOf="@id/iv_ratingStar"
                    android:layout_marginStart="3dp" />

                <Button
                    android:id="@+id/bt_favourites"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="8dp"
                    android:text="+"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>