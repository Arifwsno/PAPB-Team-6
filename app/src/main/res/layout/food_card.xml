<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <!--card resep-->
    <androidx.cardview.widget.CardView
        android:layout_width="156dp"
        android:layout_height="196dp"
        android:background="@color/pure_white"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:tag="@{meal.name}"
            android:onClick="@{listener::onClicked}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <data>
                <variable
                    name="meal"
                    type="com.example.projectfoodpedia.datamakanan.MealResponse" />

                <variable
                    name="listener"
                    type="com.example.projectfoodpedia.utils.CustomOnClick" />
            </data>


            <ImageView
                android:id="@+id/iv_foodImage"
                android:imageUrl="@{meal.picture}"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!--nama resep-->
            <TextView
                android:id="@+id/tv_foodTitle"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="11dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_foodImage"
                android:text="@{meal.name}"
                android:textSize="14sp"
                android:textColor="@color/dark_yellow"
                android:ellipsize="end"
                android:singleLine="true" />

            <!--rating-->
            <ImageView
                android:id="@+id/iv_ratingStar"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_foodTitle"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="11dp"
                android:background="@drawable/starrating" />

            <TextView
                android:id="@+id/tv_ratingText"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_ratingStar"
                app:layout_constraintBottom_toBottomOf="@id/iv_ratingStar"
                app:layout_constraintStart_toEndOf="@id/iv_ratingStar"
                android:layout_marginStart="3dp"
                android:textSize="12sp"
                android:textColor="@color/yellow" />

            <!--button favorite-->
            <Button
                android:id="@+id/btn_favoriteFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_medium"
                android:background="false"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:letterSpacing="0"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:padding="4dp"
                android:text="Tambah"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                app:icon="@drawable/arrowrightcircle"
                app:iconGravity="textEnd"
                app:iconTint="@color/orange"
                app:iconPadding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>