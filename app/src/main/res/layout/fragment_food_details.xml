<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<data>

    <variable
        name="detail"
        type="com.example.projectfoodpedia.datamakanan.model.MealDetailsModel" />
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    tools:context=".FoodDetailsFragment">

    <!--foto makanan-->
    <ImageView
        android:id="@+id/iv_foodDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:imageUrl="@{detail.picture}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--button favorite-->
    <Button
        android:id="@+id/fab_favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="true"
        android:fontFamily="@font/barlow_semibold"
        android:letterSpacing="0"
        android:outlineAmbientShadowColor="@color/orange"
        android:outlineSpotShadowColor="@color/orange"
        android:padding="4dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="@string/favorite"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--title-->

    <!--category-->
    <TextView
        android:id="@+id/tv_foodDetailsTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/barlow_bold"
        android:gravity="center"
        android:text="@{detail.name}"
        android:textAllCaps="true"
        android:textColor="@color/dark_yellow"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_foodDetailsImage" />

    <TextView
        android:id="@+id/tv_foodDetailsCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="@{detail.category}"
        android:textColor="@color/dark_yellow"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_foodDetailsTitle" />


    <!--instruksi-->
    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_foodDetailsCategory"
        android:layout_marginTop="16dp"
        android:text="@{detail.instruction}"
        android:fontFamily="@font/barlow_regular"
        android:textSize="12sp"
        android:textColor="@color/dark_yellow"/>

    <Button
        android:id="@+id/btn_notification"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_foodDetailsImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>