<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- pict-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_NotifImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="5dp">
                <ImageView
                    android:id="@+id/iv_bankImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/nasgor_image" />
            </androidx.cardview.widget.CardView>

            <!--notif name-->
            <TextView
                android:id="@+id/tv_NotifTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@id/cv_NotifImage"
                android:layout_marginStart="16dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Mandiri Syariah Mandiri Syariah Mandiri Syariah"
                android:textSize="16sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/dark_yellow"
                android:fontFamily="@font/barlow_semibold"/>

            <!--isi notif-->
            <TextView
                android:id="@+id/tv_NotifDetail"
                app:layout_constraintTop_toBottomOf="@id/tv_NotifTitle"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@id/cv_NotifImage"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Mandiri Syariah Mandiri Syariah Mandiri Syariah Mandiri Syariah Mandiri Syariah"/>

            <!--time stamp notif-->
            <TextClock
                android:id="@+id/NotifTimeStamp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timeZone="GMT+0700"
                android:format24Hour="H:mm"
                android:format12Hour="@null"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>