<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/welcomePage">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.projectfoodpedia.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/actionMenuToDetail"
            app:destination="@id/foodDetailsFragment" />
        <argument
            android:name="category"
            app:argType="com.example.projectfoodpedia.datamakanan.model.CategoryModel" />
    </fragment>
    <fragment
        android:id="@+id/foodDetailsFragment"
        android:name="com.example.projectfoodpedia.FoodDetailsFragment"
        android:label="Resep Masakan"
        tools:layout="@layout/fragment_food_details" >
        <argument
            android:name="meal"
            app:argType="com.example.projectfoodpedia.datamakanan.model.MealModel" />

    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.projectfoodpedia.HomeFragment"
        android:label="Pilih Kategori Makanan"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/actionHomeToMenu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/actionHomeToNotification"
            app:destination="@id/notification" />
        <action
            android:id="@+id/action_homeFragment_to_profile"
            app:destination="@id/profile" />
        <action
            android:id="@+id/action_homeFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.projectfoodpedia.FavouritesFragment"
        android:label="Resep Favoritmu"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/actionFavouriteToFavouritesDetails"
            app:destination="@id/favouriteDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteDetailFragment"
        android:name="com.example.projectfoodpedia.FavouritesDetailsFragment"
        android:label="Resep Masakan"
        tools:layout="@layout/fragment_favourites_details" >
        <argument
            android:name="meal"
            app:argType="com.example.projectfoodpedia.datamakanan.model.MealDetailsModel" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.example.projectfoodpedia.profile"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/notification"
        android:name="com.example.projectfoodpedia.notification"
        android:label="Notifikasi"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/splashscreen"
        android:name="com.example.projectfoodpedia.Splashscreen"
        tools:layout="@layout/fragment_splashscreen" >
        <action
            android:id="@+id/action_splashscreen_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splashscreen_to_welcomePage"
            app:destination="@id/welcomePage" />
    </fragment>
    <fragment
        android:id="@+id/welcomePage"
        android:name="com.example.projectfoodpedia.WelcomePage"
        tools:layout="@layout/fragment_welcome_page" >
        <action
            android:id="@+id/action_welcomePage_to_signup"
            app:destination="@id/signup" />
        <action
            android:id="@+id/action_welcomePage_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/signup"
        android:name="com.example.projectfoodpedia.Signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.projectfoodpedia.Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>